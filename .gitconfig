[user]
	email = taiga.shichisan@gmail.com
	name = Shichisan

[core]
  editor = nvim
  excludesfile = /Users/taigishii/.gitignore_global

[color]
  ui = auto

[push]
  default = current

[pull]
  rebase = preserve

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[gui]
	recentrepo = /Users/taigaishii/work/sarah-study

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[ghq]
	root = /Users/taigaishii/dev/src
